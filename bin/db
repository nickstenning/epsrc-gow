#!/usr/bin/env ruby

$:.unshift(File.dirname(__FILE__) + '/../lib')

require 'rubygems'

require 'db_commands'

if $0 == __FILE__
  if ARGV.length == 0 or %w{-h --help}.include? ARGV[0]
    $stderr.puts "Usage: #{File.basename($0)} <command>"
    $stderr.puts
    $stderr.puts "Known commands:"
    $stderr.puts " create                create tables in database"
    $stderr.puts " drop                  drop tables in database"
    $stderr.puts " lookup <grant id>     lookup grants by grant id"
    $stderr.puts " geocode               update geocoding for organisations"
    $stderr.puts " heatmap               output heatmap points to STDOUT"
    $stderr.puts " loadscrape            load YAML scrape data from STDIN"
    exit 1
  end

  command = ARGV.shift

  if command and Commands.respond_to?(command)
    begin
      Commands.send(command, *ARGV)
    rescue ArgumentError
      $stderr.puts "Wrong number of arguments to command '#{command}'."
      exit 1
    end
  else
    $stderr.puts "Unknown command '#{command}'."
    exit 1
  end
end
